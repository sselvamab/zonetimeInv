  <mvc:View controllerName="com.abeam.zsupplierinv1.controller.Upload"
   	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
    xmlns:c="sap.ui.core"
    c:require="{formatter : 'com/abeam/zsupplierinv1/model/formatter'}"
	xmlns="sap.m"
	height="100%">
	<Page title="Status of Uploaded Invoice data" showHeader="false">
		<Table
			id="tableid"
			inset="false"
			items="{
				path:'/UploadCollection'
			}"
			growing="true"
			growingThreshold="10">
			<headerToolbar>
				<OverflowToolbar>
					<ToolbarSpacer />
                    <Button text="Upload" press="onOpenUploadSheet"/>                       
					<Button icon="sap-icon://excel-attachment" press="onExport"/>
				</OverflowToolbar>
			</headerToolbar>
			<infoToolbar>
				<Toolbar>
					<Text text="Refer to column status for successfully posted invoices"/>
				</Toolbar>
			</infoToolbar>
			<columns>
				<Column>
					<Text text="Company Code" />
				</Column>
				<Column>
					<Text text="Document Date" />
				</Column>
				<Column>
					<Text text="Invoicing Party" />
				</Column>
				<Column>
					<Text text="Invoice Amount" />
				</Column>
				<Column>
					<Text text="Document Currency" />
				</Column>
				<Column>
					<Text text="Invoice Number" />
				</Column>
				<Column>
					<Text text="Status" />
				</Column> 
				<Column>
					<Text text="Message" />
				</Column> 				               
			</columns>
			<items>
				<ColumnListItem>
					<cells>
						<Text text="{CompanyCode}" />
						<!-- <Text text="{path: 'DocumentDate'}" /> -->
						<Text text="{
							path: 'DocumentDate',
							type: 'sap.ui.model.type.Date',
							formatOptions: { style: 'medium' }
						}"/>
						<Text text="{InvoicingParty}" />
						<Text text="{path: 'InvoiceGrossAmount', type: 'sap.ui.model.type.Float'}" />
						<Text text="{DocumentCurrency}" />
                        <Text text="{SupplierInvoice}" />
						<c:Icon src="{
								path: 'Status',
								formatter: 'formatter.formatStatusToIcon'}"  
                                color="{
                                path: 'Status', 
                                formatter: 'formatter.statusColorFormatter'}"
                                tooltip="{path: 'Message'}"/>
                        <Text text="{Message}" />								
					</cells>
				</ColumnListItem>
			</items>
		</Table>
	</Page>
</mvc:View>